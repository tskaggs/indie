<div class="space-x-2 flex text-sm">
    {{#if @site.facebook}}
    <a href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener" class="h-5 w-5" width="20"
        height="20">{{> "icons/facebook"}}</a>
    {{/if}}
    {{#if @site.twitter}}
    <a href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener" class="h-5 w-5" width="20"
        height="20">{{>
        "icons/twitter"}}</a>
    {{/if}}
    <a href="https://feedly.com/i/subscription/feed/{{@site.url}}/rss/" title="RSS" target="_blank" rel="noopener"
        class="h-5 w-5" width="20" height="20">{{>
        "icons/rss"}}</a>
</div>